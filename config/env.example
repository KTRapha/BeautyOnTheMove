# Environment Configuration
# Copy this file to .env and update with your actual values

# API Configuration
# Update this URL to point to your backend server
# Current EC2 instance: http://44.211.36.78
API_BASE_URL=http://44.211.36.78:3000
API_TIMEOUT=30000

# Authentication
AUTH_TOKEN_KEY=beautyonmove_auth_token
AUTH_REFRESH_TOKEN_KEY=beautyonmove_refresh_token

# App Configuration
APP_NAME=BeautyOnTheMove
APP_VERSION=1.0.0
APP_ENVIRONMENT=production

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CRASH_REPORTING=true
ENABLE_PUSH_NOTIFICATIONS=true

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=beautyonmove-app-assets

# Push Notifications
PUSH_NOTIFICATION_KEY=your_push_notification_key

# Analytics
ANALYTICS_KEY=your_analytics_key

# Payment Gateway
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# Backend Deployment Note:
# To make the app functional, deploy a backend server that provides:
# - Authentication endpoints (/auth/login, /auth/register)
# - User management (/user/profile)
# - Bookings management (/bookings)
# - Offers management (/offers)
# - Dashboard statistics (/dashboard/stats) 